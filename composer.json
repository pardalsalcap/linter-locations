{
    "name": "pardalsalcap/linter-locations",
    "description": "Add on to Linter to manage Geolocations",
    "keywords": [
        "pardalsalcap",
        "laravel",
        "linter-locations"
    ],
    "homepage": "https://github.com/pardalsalcap/linter-locations",
    "license": "MIT",
    "authors": [
        {
            "name": "pardalsalcap",
            "email": "dani.casasnovas@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "filament/filament": "^3.0-stable",
        "illuminate/contracts": "^10.0",
        "spatie/laravel-package-tools": "^1.14.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.8",
        "orchestra/testbench": "^8.8",
        "pestphp/pest": "^2.20",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Pardalsalcap\\LinterLocations\\": "src/",
            "Pardalsalcap\\LinterLocations\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pardalsalcap\\LinterLocations\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-linter-locations --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Pardalsalcap\\LinterLocations\\LinterLocationsServiceProvider"
            ],
            "aliases": {
                "LinterLocations": "Pardalsalcap\\LinterLocations\\Facades\\LinterLocations"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
